<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.ShipperInboundOrder" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.ShipperInboundOrder" parent="Base.Theme.ShipperInboundOrder" />

    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:elevation">@dimen/_10sdp</item>
        <item name="cornerSizeBottomRight">@dimen/_12sdp</item>
        <item name="cornerSizeBottomLeft">@dimen/_12sdp</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
        <item name="strokeColor">#0F5D98</item>

    </style>

    <style name="CustomCardView" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="cardElevation">@dimen/_2sdp</item>
        <item name="android:padding">@dimen/_2sdp</item>
        <item name="cardCornerRadius">@dimen/_15sdp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <!-- SweetAlertDialog Custom Style -->
    <style name="SweetAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Background color -->
        <item name="android:background">#D3EAFA</item> <!-- White background -->

        <!-- Title Text Color -->
        <item name="android:textColorPrimary">#4CAF50</item> <!-- Green title -->

        <!-- Message Text Color -->
        <item name="android:textColorSecondary">#424242</item> <!-- Dark gray message -->

        <!-- Button Colors -->
        <item name="colorAccent">#FF5722</item> <!-- Confirm button color -->
        <item name="android:textColorAlertDialogListItem">#FF5722</item> <!-- Optional item text color -->
    </style>

    <attr format="enum" name="neumorph_cornerFamily">
        <enum name="rounded" value="0"/>
        <enum name="oval" value="1"/>
    </attr>

    <declare-styleable name="NeumorphShapeAppearance">
        <attr format="dimension" name="neumorph_cornerSize"/>
        <attr format="dimension" name="neumorph_cornerSizeTopLeft"/>
        <attr format="dimension" name="neumorph_cornerSizeTopRight"/>
        <attr format="dimension" name="neumorph_cornerSizeBottomLeft"/>
        <attr format="dimension" name="neumorph_cornerSizeBottomRight"/>
    </declare-styleable>

    <style name="ShapeAppearance.Neumorph.FloatingActionButton" parent="">
        <item name="neumorph_cornerFamily">oval</item>
        <item name="neumorph_cornerSize">0dp</item>
    </style>

    <style name="fabStyle" parent="ShapeAppearance.Neumorph.FloatingActionButton">
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">@dimen/_12sdp</item>
        <item name="fabSize">mini</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:src">@drawable/ic_arrow_up_forward</item>
        <item name="tint">@color/white</item>
    </style>

</resources>